{
  "name": "news-markaba-server",
  "version": "2.0.0",
  "description": "Enhanced News Markaba Server with advanced Arabic support, file system integration, and comprehensive API features",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "dev:watch": "nodemon --watch . --ext js,json index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step required for Node.js server'"
  },
  "keywords": [
    "news",
    "cms",
    "arabic",
    "nodejs",
    "express",
    "mysql",
    "api",
    "enhanced",
    "markaba"
  ],
  "author": "News Markaba Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    "slugify": "^1.6.6",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "uuid": "^9.0.1",
    "sharp": "^0.32.6",
    "mime-types": "^2.1.35",
    "sanitize-html": "^2.11.0",
    "dompurify": "^3.0.5",
    "jsdom": "^23.0.1",
    "express-async-errors": "^3.1.1",
    "cookie-parser": "^1.4.6",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.10",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "express-winston": "^4.2.0",
    "node-cron": "^3.0.3",
    "archiver": "^6.0.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "xml2js": "^0.6.2",
    "rss": "^1.2.2",
    "sitemap": "^7.1.1",
    "cheerio": "^1.0.0-rc.12",
    "marked": "^9.1.6",
    "highlight.js": "^11.9.0",
    "express-fileupload": "^1.4.3",
    "image-size": "^1.0.2",
    "file-type": "^18.7.0",
    "express-slow-down": "^2.0.1",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "validator": "^13.11.0",
    "lodash": "^4.17.21",
    "async": "^3.2.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "cross-env": "^7.0.3",
    "@types/node": "^20.10.5"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "consistent-return": "off",
      "func-names": "off",
      "object-shorthand": "off",
      "no-process-exit": "off",
      "no-param-reassign": "off",
      "no-return-await": "off",
      "no-underscore-dangle": "off",
      "camelcase": "off",
      "prefer-destructuring": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "uploads/*",
      "logs/*",
      "*.test.js",
      "*.spec.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": "1000"
  }
}
